  import java.util.Scanner;

public class examenextraordinario1 {
    private static final int filas = 15;
    private static final int columnas = 10;
    private static final int ocupacion = 6;

    private static String[][] hojacalculo = new String[filas][columnas];
    private static int currentfilas = 0;
    private static int currentcolumnas = 0;

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        boolean running = true;
    initializeSpreadsheet();
    while(running){
        printSpreadsheet();
        printCursorPosition();

        String command = scanner.nextLine().toUpperCase(null);
        switch(command){
            case "W":
            moveup();
            break;
            case "A":
            moveLeft();
            break;
            case "S":
            moveDown();
            break;
            case "D":
            moveRight();
            break;
            case "F":
            running = false;
            break;
            writeValue(command);
            break;
            }
        }
    }
}
